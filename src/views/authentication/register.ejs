<%- include("../partials/header") %>
<%- include("../partials/menu2") %>
<div class="container pt-2">
    <% if(error){%>
        <% error.forEach(function(e){ %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <%= e.text %>
                <button type="button" class='close btn' data-dismiss='alert' aria-label="close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
    <% })} %>

    <form action="/register" method="POST" >
        <div class="p-3">
            <label for="Usuario" class="form-label">Usuario</label>
            <input type="text" class="form-control" id="Usuario" name="username">
          </div>
          <div class="p-3">
            <label for="contraseña" class="form-label"> Contraseña</label>
            <input type="text" class="form-control" id="contraseña" name="password"></input>
          </div>
        <div>
    <div class="mb-3" >
                <label for="role" class="form-label">Rol en el sistema</label>
                <select class="form-select" name="role" aria-label="Rol en el sistema">
                    <option value="reader">Suscritor</option>
                    <option value="publish">Publicador</option>  
                  </select>
        </div>
     
        <div class="form-check ">
            <h3 class="form-check-label py-3" >
                Tipo de Noticias
            </h3>
            <input class="form-check-input" type="checkbox" name="topics" id="exampleRadios1" value="regional" >
            <label class="form-check-label mx-1" for="exampleRadios1">
                Regional
            </label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="checkbox" name="topics" value="nacional" id="flexCheckDefault">
            <label class="form-check-label mx-1" for="flexCheckDefault">
                Nacional
            </label>
          </div>
          <div class="form-check">
            <input class="form-check-input" type="checkbox" name="topics" value="internacional" id="flexCheckChecked" >
            <label class="form-check-label mx-1" for="flexCheckChecked">
                Internacional
            </label>
            </div>
          </div>
          
          <div class="py-4">
         <button type="submit" class="btn btn-primary px-5 py-2" >Registrarse</button>
        </div>
    </form>
</div>
<%- include("../partials/footer") %>
    